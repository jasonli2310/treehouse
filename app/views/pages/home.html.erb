<%= form_tag search_path, method: :get do %>
  <div class="row">
    <div class= "col-md-6">
      <%= text_field_tag :search, params[:search], placeholder: "Where are you going?", class: "form-control" %>
    </div>
    <div class= "col-md-6">
      <%= text_field_tag :start_date, params[:start_date], placeholder: "Move In", class: "form-control" %>
    </div>
    <div class= "col-md-6">
      <%= text_field_tag :end_date, params[:end_date], placeholder: "Move Out", class: "form-control" %>
    </div>
    <div class= "col-md-6">
      <%= submit_tag "Search", class: "btn btn-primary" %>
    </div>
  </div>
<div class = "row">

  <% @properties.each do |property| %>
    <div class="col-md-4">
      <div class="panel panel-default">
        <div class="panel-heading preview">
          <%= image_tag property.show_first_photo(:medium) %>
        </div>
        <div class="panel-body">
          <%= link_to property.listing_name, property_path(property)%>
        </div>
      </div>
    </div>
  <% end %>
</div>

<script>
  $(function() {
    $("start_date").datepicker({
      dateFormat: 'dd-mm-yy'
      minDate: 0,
      maxDate: '12m',
      onSelect: function(selected) {
        $('#end_date').datepicker("option", "minDate", selected);
        $('#end_date').attr('disabled', false);
      }
    });

    $("start_date").datepicker({
      dateFormat: 'dd-mm-yy'
      minDate: 0,
      maxDate: '12m',
      onSelect: function(selected) {
        $('#end_date').datepicker("option", "minDate", selected);
        $('#end_date').attr('disabled', false);
      }
    });
  })

</script>
